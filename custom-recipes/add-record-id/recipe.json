// This file is the descriptor for the Custom code recipe drop-empty-columns
{
    "meta": {

        "label": "Drop empty columns",
        "description": "This recipe will drop all empty columns (with all empty values)",
        // icon: must be one of the FontAwesome 3.2.1 icons, complete list here at https://fontawesome.com/v3.2.1/icons/
        "icon": "icon-remove"
    },

    "kind": "PYTHON",
    
    "selectableFromDataset": "input_dataset",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "description": "Dataset to remove columns from",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],

    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output Dataset",
            "description": "Dataset to write resulting dataset in",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],


    "params": [
        {
            "name": "record_id",
            "label": "RecordID",
            "type": "STRING",
            "description": "Default is RecordID",
            "mandatory": false
        },
        {
            "name": "start_at_1",
            "label": "Start record ID at 1 (will start at 0 by default)",
            "type": "BOOLEAN"
        }
    ],

    "resourceKeys": []

}
